<div class="container">
    <div class="main">
        {{#if error}}
            <p style="color:red">Please input both a name and a description.</p>
        {{/if}}
        <form action="/groups/{{groupID}}/edited" method="POST">
            <label for="txtName">New Name:</label>
            <input type="text" id="txtName" name="name">
            <br><br>
            <label for="txtDescription">New Description:</label>
            <input type="text" id="txtDescription" name="description">
            <br><br>
            <input type="submit" value="Edit">
        </form>
    </div>
</div>